<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>GoHallServlet</servlet-name>
        <servlet-class>controller.GoHallServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GoHallServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>shoppingDlServlet</servlet-name>
        <servlet-class>controller.ShoppingDlServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shoppingDlServlet</servlet-name>
        <url-pattern>/shoppingDl</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GoOrderServlet</servlet-name>
        <servlet-class>controller.GoOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoOrderServlet</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>submitOrder</servlet-name>
        <servlet-class>controller.SubmitOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>submitOrder</servlet-name>
        <url-pattern>/submitOrder</url-pattern>
    </servlet-mapping>
</web-app>